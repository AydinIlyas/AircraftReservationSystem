@model Airline




<div class="row " style="margin-right: 0; margin-left: 0;">
    <div class="col-md-6 mx-auto">
        <div class="mt-3">
            <h4>Add Airline</h4>

        </div>
        <div class="card">
            <div class="card-body shadow-lg">

                <form asp-action="AddAirline" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mt-1">
                        <label asp-for="Name">Airline Name:</label>
                        <input asp-for="Name" class="form-control mt-1" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="button-group mt-1">
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary btn-block mt-1" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
}
