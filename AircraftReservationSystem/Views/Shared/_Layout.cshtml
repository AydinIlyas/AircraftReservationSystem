<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AircraftReservationSystem</title>
    <link rel="stylesheet" href="~/css/bootswatch.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AircraftReservationSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary " data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="User" asp-controller="Home" asp-action="Index">OUcus</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">

                        @if(User.IsInRole("Admin"))
                        {
                        <li class="nav-item nav-item-hover">
                            <a class="nav-link text-light custom-hover" asp-area="Admin" asp-controller="User" asp-action="Index">User Management</a>
                        </li>
                        <li class="nav-item nav-item-hover">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="Airport" asp-action="Index">Airport Management</a>
                        </li>
                            <li class="nav-item nav-item-hover">
                                <a class="nav-link text-light" asp-area="Admin" asp-controller="Airline" asp-action="Index">Airline Management</a>
                            </li>

                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Airline"))
                        {
                            <li class="nav-item nav-item-hover">
                                <a class="nav-link text-light" asp-area="AirlineUser" asp-controller="Flight" asp-action="Index">Flight Management</a>
                            </li>

                            <li class="nav-item dropdown nav-item-hover ">
                                <a class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Aircraft</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-light" asp-area="AirlineUser" asp-controller="Aircraft" asp-action="Index">Aircraft Management</a>
                                    <a class="nav-link text-light" asp-area="AirlineUser" asp-controller="AircraftType" asp-action="Index">Aircraft Type Management</a>

                                </div>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div id="mainContainer">
            <partial name="_Notification" />
            @RenderBody()
    </div>

    <footer class="footer text-muted bg-primary position-relative">
        <div class="container text-light">
            &copy; 2023 - AircraftReservationSystem
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
