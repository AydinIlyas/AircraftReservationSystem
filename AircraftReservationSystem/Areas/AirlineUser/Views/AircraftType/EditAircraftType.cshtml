@model AircraftReservationSystem.Models.ViewModels.AircraftTypeVM

<form method="post" asp-action="UpdateAircraftType">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Airport Type</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Type">Type:</label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SeatLength">Seat Length:</label>
            <input asp-for="SeatLength" class="form-control" />
            <span asp-validation-for="SeatLength" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SeatWidth">Seat Width:</label>
            <input asp-for="SeatWidth" class="form-control">
            <span asp-validation-for="SeatLength" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BusinessRows">Business Rows:</label>
            <input asp-for="BusinessRows" class="form-control">
            <span asp-validation-for="BusinessRows" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Capacity">Capacity:</label>
            <input asp-for="Capacity" class="form-control">
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Id" />

        <div class="button-group">
            <a asp-controller="AircraftType" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
}
