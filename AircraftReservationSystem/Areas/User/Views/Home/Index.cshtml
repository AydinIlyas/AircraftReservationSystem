@model AircraftReservationSystem.Models.ViewModels.SearchFlight
<head>
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
</head>

<div class="homepage">
    <div class="container mt-5">
        <div class="row justify-content-center" id="cardContainer">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">Flight Search</h5>

                        <form>
                            <div class="row">
                                <div>
                                    <input type="radio" asp-for="IsOneWay" value="true" onchange="IsOneWayOrNot()"> <span>One way</span>
                                    <input type="radio" asp-for="IsOneWay" value="false" onchange="IsOneWayOrNot()"> <span>Round trip</span>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="departureAirport" class="form-label">Departure Airport</label>
                                        <input type="text" class="form-control" id="departureAirport" placeholder="Enter Departure Airport">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="arrivalAirport" class="form-label">Arrival Airport</label>
                                        <input type="text" class="form-control" id="arrivalAirport" placeholder="Enter Arrival Airport">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="startDate" class="form-label">Start Date</label>
                                        <input type="date" class="form-control" id="startDate">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3" id="endDateContainer">
                                        <label for="endDate" class="form-label">End Date</label>
                                        <input type="date" class="form-control" id="endDate">
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">Search</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        // Toggle visibility of the "End Date" field based on the selected radio button
        function IsOneWayOrNot() {
            var isOneWayRadioButton = $('input[name="IsOneWay"]:checked');
            var isOneWayValue = isOneWayRadioButton.val();
            console.log(isOneWayValue);
            $('#endDateContainer').toggle(isOneWayValue);
        }
        $(function () {
            IsOneWayOrNot();
        });
    </script>
}