
@model List<Passenger>
@{
    ViewData["Title"] = "Index";
}
<h1>User Management</h1>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">User List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Passenger" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New User
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <th width="20%">
                Passenger Name
			</th>
            <th width="20%">
                Passenger Surname
			</th >
            <th width ="20%">
                Passenger Email
            </th>
            <th width="40%"></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Firstname
				</td>
                <td>
                    @obj.Lastname
				</td>
                <td>
                    @obj.Email
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>